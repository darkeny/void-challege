generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    String  @id @default(uuid())
  name  String?
  email String  @unique
  posts Posts[]
}

model Posts {
  id       String     @id @default(uuid())
  title    String    
  content  String?
  image String?
  published Boolean @default(false)
  category Category @default(NEWS)
  User     User?      @relation(fields: [userId], references: [id])
  userId   String?

  @@unique([title, userId])
}

enum Category {
  SPORTS
  BUSINESS
  EDUCATION
  NEWS
}
